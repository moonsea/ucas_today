<h1>更改文章</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(@article) do |f| %>
<%= f.label :标题 %>
<%= f.text_field :title %>
<%= f.label :关键字%>
<%= f.text_field :info%>
<%= f.label :内容 %>
<p><%= f.text_area :text, :size => '40x10' %> </p> 
<%= f.submit "保存更改", class: "btn btn-primary" %>
<% end %>
</div>
</div>

<%= link_to "返回文章列表", current_author %> 
