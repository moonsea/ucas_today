<div class='cms_form'>
<%  paragraph_options_form_for :profile_privacy do |f| -%>

   <%= f.header 'Set profile privacy options' -%>
    <%= f.select :profile_type_id, @profile_types = [[ '-- Select User Profile Type --',nil ]] + UserProfileType.find_select_options(:all) %>

 <%= f.radio_buttons :published, [['Yes',true],['No',false]], :label => 'Allow new pages', :vertical => false,  :description => 'Setting profiles to published by default, available for public view.'%>
 <%= f.radio_buttons :protected, [['Yes',true],['No',false]], :label => 'Auto Publish', :vertical => false, :description => 'Setting profiles to protected, meaning they can only be seen by others granted access to them, such as friends lists.'%>


<% end -%>
</div>


